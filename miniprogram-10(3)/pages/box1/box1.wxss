.main{
  width:100%;
  margin-top: 60rpx;
}

.price-detail{
  display:flex;
  justify-content: center;
  align-items: center;
  padding-left:4vh
}

.net button{
  display:flex;
  justify-content: center;
  align-items: center;
  padding-top:2vh;
  background-color:rgb(51, 116, 236);
  color:rgba(255, 255, 255, 0.87);
}

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  padding-left: 5%;
  padding-right:5%;
  background-color: rgba(69, 195, 233, 0.788);
  color: rgb(24, 2, 32);
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: rgb(239, 223, 250);
  text-align: center;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  border: 1px solid rgb(121, 31, 31);
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 1vh;
  padding-bottom: 1vh;
}

.toast-button {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: rgb(239, 223, 250);
  text-align: center;
  padding-top: 0vh;
  padding-bottom: 0vh
}

.button1 {
  width: 50%;
}

.button2 {
  width: 50%;
}

.button1 button {
  width: 100%;
  text-align: center;
  background-color: rgb(239, 223, 250);
  color: black;
  border-radius: 0px;
}

.button2 button{
  width: 100%;
  text-align: center;
  background-color: rgb(239, 223, 250);
  color: red;
  border-radius: 0px;
}